<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/core/systems/quest/quests.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/core/systems/quest/quests.vjs_c" />
	</scripts>
	<snippets>
		<snippet name="mini-quest-insert">
			<Panel class="mini-quest-insert">
				<Panel class="portrait-holder">
					<Image id="PortraitImage"/>
				</Panel>
				<Panel class="info-holder">
					<Panel class="quest-header">
						<Panel class="quest-title">
							<Label id="QuestName" html="true"/>
							<Image id="QuestTypeImage"/>
						</Panel>
						<Panel class="quest-buttons">
							<Button id='AbandonButton' class="quest-button">
								<Label text="X"></Label>
							</Button>
						</Panel>
					</Panel>
					<Panel class="quest-stage">
						<Label id="QuestDescription" html="true"/>
					</Panel>
					<Panel id="TaskPanel" class="quest-tasks"/>
				</Panel>
			</Panel>
		</snippet>
		<snippet name="task-insert">
			<Panel class="task-frame">
				<Label id="TaskObject" class="task-text" html="true"></Label>
				<Label id="TaskObjectNumber" class="task-text" html="true"></Label>
			</Panel>
		</snippet>
		<snippet name="main-quest-insert">
			<Panel class="main-quest-insert">
				<Image id="ThePortraitImage"/>
				<Panel class="quest-info-panel">
					<Panel class="header">
						<Label id="TheQuestName"/>
						<ToggleButton id="TrackQuestToggle" class="soft-hidden" text="Track Quest"></ToggleButton>
					</Panel>
					<Panel class="the-quest-description">
						<Label id="TheQuestDescription" html="true"/>
					</Panel>
					<Panel id="StageDescriptions"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
    <Panel class="context quests_overlay" hittest="false">
		<Panel id="Underlay" onactivate="ToggleCompletedQuests()" oncontextmenu="ToggleCompletedQuests()"></Panel>

		<!-- All Quests Panel -->
		<Panel id="AllQuestsPanel" onactivate="" hittest="true">
			<Panel class="header">
				<Label text="Quests"/>
			</Panel>
			<Panel class='all-quests-body'>
				<Panel class="tabs">
					<Panel id="ActiveQuestsTabButton">
						<Label text="Active"/>
					</Panel>
					<Panel id="AvailableQuestsTabButton">
						<Label text="Available"/>
					</Panel>
					<Panel id="CompletedQuestsTabButton">
						<Label text="Completed"/>
					</Panel>
					<Panel id="RepeatableQuestsTabButton" class="right-side">
						<Label text="Repeatable"/>
					</Panel>
				</Panel>
				<Panel id="SelectedQuestsHolder" hittest="false"/>
			</Panel>
		</Panel>


		<!--Active + Selected Quests MiniPanel-->
		<Panel id="MiniQuestPanel" hittest="false">
			<Panel id='MiniQuestHeader' class="header" hittest="true" draggable='true'>
				<Panel/>
				<Label text="Quests"/>
				<Button class='options' onactivate="ToggleCompletedQuests()"/>
			</Panel>
			<Panel id="MiniQuestsHolder" hittest="false"/>
		</Panel>

		<!-- Abandon Popup -->
		<Panel id="AbandonWarning">
			<Label id="QuestName"/>
			<Label id="AbandonText"/>
			<Panel>
				<Button id="AbandonConfirm">
					<Label text="Abandon Quest"/>
				</Button>
				<Button id="AbandonDeny">
					<Label text="Cancel"/>
				</Button>
			</Panel>
		</Panel>

	</Panel>
</root>
 