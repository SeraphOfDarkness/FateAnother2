    </styles>
    <scripts>
        <include src="s2r://panorama/scripts/custom_game/fateanother_chatbox.vjs_c" /> 
    </scripts>

    <Panel class="FateChatRoot" hittest="false">
        <Panel id="FateChatPanel" hittest="true" >
            <Panel id="FateChatBox" hittest="false">
                
            </Panel>
            <Panel id="FateChatClient" hittest="true" >
                <DropDown id="FateChatList" oninputsubmit="OnDropDownChanged()">
                    <Label text="#Allies" id="1" checked="true"/>
                    <Label text="#FAll" id="2"/>
                </DropDown>
                <TextEntry id="FateEntry" maxchars="100" placeholder="Type here..." oninputsubmit="OnSubmitted()" />
            </Panel>
        </Panel>
        <Panel id="FateChatButton" hittest="true" onactivate="OnChatButtonPressed()">

        </Panel>
    </Panel>
